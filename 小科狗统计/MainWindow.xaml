            Width="45"
            Height="30"
            Background="Transparent"
            BorderThickness="0"
            Click="MinimizedButton_Click"
            Content="─" />
          <Button
            Width="45"
            Height="30"
            Background="Transparent"
            BorderThickness="0"
            Click="MaximizedButton_Click"
            Content="☐" />
