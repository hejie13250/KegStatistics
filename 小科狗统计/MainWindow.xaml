                FontSize="14"
                Style="{DynamicResource CheckBoxStyle}" />
              <CheckBox
                x:Name="MCcheckBox"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Right"
                FontSize="14"
                Style="{DynamicResource CheckBoxStyle}" />



